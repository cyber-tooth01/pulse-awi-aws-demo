# AWS Configuration
AWS_REGION=us-east-1
DYNAMODB_TABLE=pulseaqi_sensor_data

# MQTT Configuration
MQTT_BROKER=mqtt.meshtastic.org
MQTT_PORT=1883
MQTT_TOPIC=msh/US/2/e/pulse-aqi/#

# Meshtastic Encryption PSK (base64-encoded)
# Get this from your Meshtastic app > Channel Settings > PSK
# Example: Sw== (default public channel)
MESHTASTIC_PSK=Sw==

# EC2 Configuration
EC2_KEY_PAIR_NAME=pulseaqi-demo-key
EC2_INSTANCE_TYPE=t3.micro
MY_IP_ADDRESS=209.91.209.37

# IAM Configuration
IAM_ROLE_NAME=pulseaqi-ec2-role
IAM_INSTANCE_PROFILE=pulseaqi-ec2-profile

# Security Group
SECURITY_GROUP_NAME=pulseaqi-mqtt-bridge
